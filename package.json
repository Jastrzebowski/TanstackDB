{
  "name": "tanstack-db-learning-project",
  "version": "1.0.0",
  "description": "A fun project to learn TanStack DB with collections, live queries, and optimistic mutations",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "playwright test",
    "test:safari": "playwright test --project=webkit",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "capture": "tsx scripts/capture-browser-state.ts webkit",
    "capture:chrome": "tsx scripts/capture-browser-state.ts chromium",
    "capture:firefox": "tsx scripts/capture-browser-state.ts firefox"
  },
  "dependencies": {
    "@tanstack/db": "^0.1.3",
    "@tanstack/react-query": "^5.85.3",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  }
}
